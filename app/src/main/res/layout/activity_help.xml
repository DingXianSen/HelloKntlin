<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head_top" />

    <include layout="@layout/layout_head_two" />

    <WebView
        android:id="@+id/activity_help_wv"
        android:layout_width="match_parent"
        android:layout_height="450dp"></WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/activity_help_btn_return_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1DB4DE"
            android:text="返回首页"
            android:textColor="@color/color_FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>