<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head_top" />

    <include layout="@layout/layout_head_two" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_magcard_1"
            style="@style/MagCardTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注意事项：" />

        <TextView
            android:id="@+id/activity_magcard_2"
            style="@style/MagCardTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_magcard_1"
            android:text="1.刷卡时，请对准磁道。" />

        <TextView
            android:id="@+id/activity_magcard_3"
            style="@style/MagCardTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_magcard_2"
            android:text="2.如果刷卡无响应，请返回首页" />

        <TextView
            android:id="@+id/activity_magcard_4"
            style="@style/MagCardTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_magcard_3"
            android:text="   重新进入刷卡页。" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_magcard_3"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <!--<include layout="@layout/message" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡号：" />

            <EditText
                android:id="@+id/activity_magcard_cardnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_magcard_4"
                android:focusable="false" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_magcard_btn_return_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_1DB4DE"
            android:text="@string/return_main"
            android:textColor="@color/color_FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>