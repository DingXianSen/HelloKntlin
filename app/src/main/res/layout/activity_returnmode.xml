<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--退还方式-->
    <include layout="@layout/layout_head_top" />

    <include layout="@layout/layout_head_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/activity_returnmode_iv_scancode"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:src="@mipmap/img_scan_code" />

        <ImageView
            android:id="@+id/activity_returnmode_iv_paybycard"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:src="@mipmap/img_pay_by_card" />

        <ImageView
            android:id="@+id/activity_returnmode_iv_input"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:src="@mipmap/img_input_message" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/activity_retrnmode_btn_return_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1DB4DE"
            android:text="@string/return_main"
            android:textColor="@color/color_FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>