<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--按照流水号查询信息展示页-->
    <include layout="@layout/layout_head_top" />

    <include layout="@layout/layout_head_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交  易  号:" />

            <TextView
                android:id="@+id/activity_serialnumber_result_tv_tradeno"
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678901234" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡        号:" />

            <TextView
                android:id="@+id/activity_serialnumber_result_tv_cardnum"
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678901234" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影票类型:" />

            <TextView
                android:id="@+id/activity_serialnumber_result_tv_movietype"
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通影片(35)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张        数:" />

            <TextView
                android:id="@+id/activity_serialnumber_result_tv_sheetnum"
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额:" />

            <TextView
                android:id="@+id/activity_serialnumber_result_tv_money"
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影        院:" />


            <TextView
                android:id="@+id/activity_serialnumber_result_tv_address"
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间:" />


            <TextView
                android:id="@+id/activity_serialnumber_result_tv_time"
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SheetNumTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易状态:" />


            <TextView
                android:id="@+id/activity_serialnumber_result_tv_state"
                style="@style/SheetNumTextViewStyle"
                android:textColor="@color/viewfinder_laser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/activity_serialnumber_result_btn_return_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:background="@color/color_1DB4DE"
            android:text="@string/return_main"
            android:textColor="@color/color_FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>